# late night hours configuration (24-hour format, PST timezone)
LATE_NIGHT_START_HOUR = 24  # 12 PM PST
LATE_NIGHT_END_HOUR = 6  # 6 AM PST

# function to check if current time is within late night hours
def is_late_night_hours() -> bool:
    """Check if current time is within late night hours"""
    pst = timezone(timedelta(hours=-8))  # PST is UTC-8
    current_hour = datetime.now(pst).hour
    if LATE_NIGHT_START_HOUR > LATE_NIGHT_END_HOUR:
        return current_hour >= LATE_NIGHT_START_HOUR or current_hour < LATE_NIGHT_END_HOUR
    else:
        return LATE_NIGHT_START_HOUR <= current_hour < LATE_NIGHT_END_HOUR